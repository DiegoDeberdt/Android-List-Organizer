<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lu.uni.student.shoppinglist">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Warning:(7, 36) WRITE_EXTERNAL_STORAGE no longer provides write access when targeting Android 10+-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">

        <activity
            android:label="@string/item_edit_action_title"
            android:name=".activities.Item.ItemEditActivity"
            android:exported="false" />

        <activity
            android:label="@string/list_edit"
            android:name=".activities.List.ListEditActivity"
            android:exported="false" />

        <activity
            android:label="@string/list_items"
            android:name=".activities.Item.ItemActivity"
            android:exported="false" />

        <activity
            android:name=".activities.List.ListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>